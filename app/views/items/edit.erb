<h1><%= @list.title %></h1>
<form method="post" action="/items/<%=@item.id%>/edit/<%=@list.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Item: <textarea name="description" placeholder="<%=@item.description%>" rows="10" cols="30"></textarea><br>
  Word Number: <input type="text" name="word_number" value="<%=@item.word_number%>"><br>
  <input type="submit" value="submit">
</form>
